{
  "compilerOptions": {
    "target": "es2021",
    "module": "NodeNext",
    "strict": false,
    "skipLibCheck": true,
    "removeComments": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
